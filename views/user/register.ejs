<% layout('layouts/boilerplate') %>
<div class="container h-100">
<main class="row align-items-center h-100">
  <div
    class="col-sm-8
    offset-sm-2
    col-md-10
    offset-md-1
    col-lg-6
    offset-lg-6
    mt-2
    mb-2"
  >
  <div class="card shadow">
    <div class="card-body">
      <h5 class="card-title">Registrarse</h5>
      <form
        action="/register"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="username">Nombre de Usuario</label>
          <input
            class="form-control"
            type="text"
            id="username"
            name="user[username]"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Correo Electrónico</label>
          <input
            class="form-control"
            type="email"
            id="email"
            name="user[email]"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Contraseña</label>
          <input
            class="form-control"
            type="password"
            id="password"
            name="user[password]"
            required
          />
        </div>

        <fieldset class="mb-3">
          <p class="form-label">¿Eres Desarrollador Web?</p>

          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="user[developer]"
              id="noDeveloper"
              value="false"
              checked
            />
            <label class="form-check-label" for="noDeveloper"> No </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="user[developer]"
              id="developer"
              value="true"
            />
            <label class="form-check-label" for="developer"> Si </label>
          </div>
        </fieldset>

        <button class="btn btn-success btn-block">Registrarse</button>
      </form>
    </div>
  </div>
    </div>
  </div>
</main>
</div>