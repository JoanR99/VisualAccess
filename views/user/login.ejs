<% layout('layouts/boilerplate') %>

<div class="container h-100">
  <main class="row align-items-center h-100">
    <div
      class="
        col-sm-8
        offset-sm-2
        col-md-10
        offset-md-1
        col-lg-6
        offset-lg-6
        mt-2
        mb-2
      "
    >
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title">Iniciar Sesión</h5>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label class="form-label" for="username">Nombre de Usuario</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Contraseña</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
            </div>
            <button class="btn btn-success btn-block">Iniciar Sesión</button>
          </form>
        </div>
      </div>
    </div>
  </main>
</div>
